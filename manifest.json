{
  "manifest_version": 2,

  "name": "Mutable",
  "description": "This extension mutes/unmutes tabs that are playing audio.",
  "version": "1.0",
  "options_page": "options.html",
  
  "icons": { "16": "icons/icon16.png",
           "48": "icons/icon48.png",
          "128": "icons/icon128.png" },

  "browser_action": {
    "default_icon": "icons/icon.png",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["js/background.js"],
    "persistent": true
  },
  
  "permissions": [
    "tabs",
    "storage"
  ]
} 